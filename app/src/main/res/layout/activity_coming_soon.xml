<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btnbackcoming"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_back_green" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppinslight"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="Pemberitahuan"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btnhelpcoming"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_baseline_help_outline_24" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_above="@+id/keterangan"
        android:id="@+id/imagecoming"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_undraw_under_construction_46pa"
            android:layout_width="match_parent"
            android:layout_height="140dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keterangan"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#858585"
            android:gravity="center"
            android:textSize="13dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Fitur ini sedang proses pengerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#858585"
            android:gravity="center"
            android:textSize="11dp"
            android:fontFamily="@font/poppinslight"
            android:text="Nantikan fitur ini di update berikutnya yaa..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>