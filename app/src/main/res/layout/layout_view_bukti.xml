<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetUpload"
    android:orientation="vertical"
    android:background="@drawable/bg_modal_upload"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagebukti"
            android:src="@drawable/organikita"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/btnpilihyglain"
            android:fontFamily="@font/poppinslight"
            android:textColor="#00aa13"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:text="Pilih yang lain"
            android:background="@drawable/bg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinslight"
            android:id="@+id/btnuploadfix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn1"
            android:text="Upload"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>